---
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Church of Flat Earth</title>
  </head>
  <body class="bg-gray-100 font-sans text-gray-900">

    <!-- ðŸ”· FIXED TOP GRAPHIC HEADER -->
    <header class="fixed top-0 left-0 right-0 z-50 bg-blue-950 text-white h-48 flex flex-col items-center justify-center shadow-lg">
      <h1 class="text-4xl font-extrabold tracking-wide">Church of Flat Earth</h1>
      <p class="text-sm text-blue-200 mt-2">Join the edge of reason.</p>

      <!-- ðŸ”¹ Navbar -->
      <nav class="mt-4">
        <ul class="flex space-x-6">
          <li>
            <a href="#" class="bg-blue-700 hover:bg-blue-600 text-white px-4 py-2 rounded-lg font-semibold transition">
              Sign Up
            </a>
          </li>
          <li>
            <a href="#" class="bg-white hover:bg-blue-100 text-blue-900 px-4 py-2 rounded-lg font-semibold transition">
              Login
            </a>
          </li>
        </ul>
      </nav>
    </header>

    <!-- ðŸ”¶ SHOP BANNER -->
    <section class="mt-52 px-6">
      <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-900 p-4 rounded-xl shadow mb-12">
        <h2 class="text-2xl font-bold mb-1">Join the Inner Circle</h2>
        <p>Access exclusive Flat Earth merch by becoming a member!</p>
        <a href="#" class="mt-2 inline-block bg-yellow-400 hover:bg-yellow-500 text-white font-semibold px-4 py-2 rounded-lg">
          Visit the Shop
        </a>
      </div>
    </section>

    <!-- ðŸ“° BLOG SECTION -->
    <section class="max-w-5xl mx-auto px-6 mb-16">
      <h2 class="text-3xl font-bold mb-6 text-center">Latest from the Flat Files</h2>
	  <div class="grid md:grid-cols-2 gap-8">
		{posts.map(post => (
		  <article class="bg-white p-6 rounded-xl shadow hover:shadow-md transition">
			<h3 class="text-xl font-semibold mb-2">
			  <a href={`/blog/${post.slug}`} class="hover:underline text-blue-700">
				{post.data.title}
			  </a>
			</h3>
			<p class="text-sm text-gray-500 mb-2">{new Date(post.data.pubDate).toLocaleDateString()}</p>
			<p class="text-gray-700 mb-4">{post.data.description}</p>
			<a href={`/blog/${post.slug}`} class="text-blue-600 hover:underline font-medium">
			  Read more â†’
			</a>
		  </article>
		))}
	  </div>
	  